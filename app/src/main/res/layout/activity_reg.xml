<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reg_layout"

    android:background="@color/bg_orange">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/reg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="42dp"
            android:layout_marginBottom="20dp"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textColor="@color/black"
            android:shadowRadius="5" />
        <TextView
            android:id="@+id/reg_title_2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_title"
            android:textColor="@color/black"
            android:text="If you already have an account register"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/reg_username"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:textColor="@color/black"
            android:textColorHint="#736565"
            android:layout_height="50dp"
            android:layout_below="@+id/reg_button_signIn"
            android:hint="username"/>

        <EditText
            android:id="@+id/reg_password"
            android:layout_width="200dp"
            android:textColorHint="#736565"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_below="@+id/reg_username"
            android:hint="password"/>

        <EditText
            android:id="@+id/reg_name"
            android:layout_width="200dp"
            android:textColorHint="#736565"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_below="@+id/reg_password"
            android:hint="name"/>
        <TextView
            android:id="@+id/reg_title_3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/black"
            android:text="choose your division"
            android:textSize="15dp" />
        <Spinner
            android:id="@+id/reg_work"
            android:layout_width="200dp"
            android:outlineSpotShadowColor="#736565"
            android:layout_height="50dp"
            android:layout_below="@+id/reg_title_3"
            android:textColor="@color/black"
            android:entries="@array/work" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reg_button_signUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_work"
            android:text="Register"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:background="@drawable/oval_button"
            android:layout_marginTop="40dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reg_button_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/reg_title_2"
            android:text="Or login here"
            android:background="@color/bg_orange"/>
    </RelativeLayout>

</RelativeLayout>